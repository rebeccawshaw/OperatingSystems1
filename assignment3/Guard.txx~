#ifndef GUARD_TXX
#define GUARD_TXX

template<typename T>
Guard<T>::Guard (T &mutex, bool locked):m_(mutex)
{
  // Fill in here
  if (locked)
    acquire();
  else
    release();
}

template<typename T>
Guard<T>::~Guard (void)
{
  // Fill in here
  release();
}

template<typename T>
void
Guard<T>::acquire (void)
{
  // Fill in here
  m_.lock();
}


template<typename T>
void
Guard<T>::release (void)
{
  // Fill in here
  m_.unlock();
}

template<typename T>
bool
Guard<T>::locked (void)
{
  m_.locked();
}

#endif
